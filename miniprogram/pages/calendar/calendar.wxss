.calendar-page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.calendar-head{
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: center;
}

.calendar-body{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.calendar-week{
  width: 100%;
  display: flex;
  flex-grow: 1;
  justify-content: space-around;
}

.calendar-day{
  width: 100%;
  display: flex;
  flex-grow: 1;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.calendar-item-false{
  width:14.2%;
  height: 80rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center
}

.calendar-item-true{
  width:14.2%;
  height: 80rpx;
  text-align: center;
  background-color: red;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center
}

.calendar-mode{
  width:100%;
  display: flex;
  align-items: flex-end;
}

